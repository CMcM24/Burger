<div class="container">
    <div class="row justify-content-center">
        <h1>Burger App</h1>
        <img src="#">
        <br>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h4>Burgers on the Menu:</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <p data-id="{{id}}">{{burger_name}}</p>
                            <button data-id="{{id}}">Eat</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-5">
            <h4>Burgers Eaten</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p>{{burger_name}}</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <textarea rows="4" cols="50" id="userBurger"></textarea>
    <button type="submit" id="burger_submission">Submit</button>
</div>

