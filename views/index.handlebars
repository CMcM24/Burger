<div class="container">
    <div class="notBody row justify-content-center">
        <br>
        <img src="/assets/img/hamburger.png" class="burgPic">
        <br>
    </div>
    <div class="notBody row justify-content-center">
        <h1 class="appTitle">Burger App</h1>
    </div>
    <div class="notBody row justify-content-center">
        <div class="notEaten col-md-5">
            <h4>Burgers on the Menu:</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <p data-id="{{id}}">{{burger_name}}</p>
                            <button class="eatThis btn btn-success" data-id="{{this.id}}">Eat</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="eaten col-md-5">
            <h4>Burgers Eaten</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p data-id="{{id}}">{{burger_name}}</p>
                            <button class="deleteThis btn btn-danger" data-id="{{this.id}}">Delete</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="inputBox row justify-content-center">
    <textarea rows="4" cols="50" id="userBurger"></textarea>
    <button type="submit" id="burger_submission" class="theSubmit btn btn-warning">Submit</button>
</div>
